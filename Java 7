wget --no-check-certificate --no-cookies --header "Cookie: oraclelicense=accept-securebackup-cookie" "https://download.oracle.com/otn-pub/java/jdk/7u80-b15/jdk-7u80-linux-x64.tar.gz" && tar -zxvf jdk-7u80-linux-x64.tar.gz && sudo mkdir -p /usr/lib/jvm && sudo mv jdk1.7.0_80 /usr/lib/jvm/ && echo 'export JAVA_HOME=/usr/lib/jvm/jdk1.7.0_80' >> ~/.bashrc && echo 'export PATH=$JAVA_HOME/bin:$PATH' >> ~/.bashrc && source ~/.bashrc && java -version
